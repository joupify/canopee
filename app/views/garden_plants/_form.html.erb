<%= simple_form_for @garden_plant do |f| %>
    <div class="form-inputs">
      <%= f.input :pot_color, label: "Pot Color" %>
      <%= f.input :status, collection: GardenPlant.statuses, as: :check_boxes, label: "Status" %>
      <%= f.input :plant_nickname, label: "Plant Nickname", input_html: { value: garden_plant.plant.nickname } %>
    </div>
    <div class="form-actions">
      <%= f.button :submit, class: "btn btn-primary" %>
    </div>
  <% end %>



