<div class="container">
  <h1 class="text-center m-3">Mes soins</h1>
    <% @all_activities.each do |activity| %>
      <div class="row mb-4">
        <div class="green-square col-5 text-center">
        <% if activity == "Arrose-moi !" %>
          <i class="fa-solid fa-droplet"></i>
          <% elsif activity == "Rempote-moi !"  %>
          <i class="fa-solid fa-whiskey-glass"></i>
          <% end %>
        </div>
        <div class= "col-5">
          <h4><%= activity %></h4>
          <% @my_tasks.take(5).each do |task| %>
            <% if task.done_time.nil? && task.activity == activity %>
              <%#= link_to task.garden_plant do %>
                  <div class="row justify-content-around">
                  <div class= "col-9 align-self-center">
                    <%= task.garden_plant.plant.name %>
                  </div>
                  <div class="col-2 align-self-center">
                    <%= simple_form_for task, url: update_tasks_task_path(task) , method: :patch do |f| %>
                      <%= f.button :button do %>
                        <i class="fa-solid fa-circle-check"></i>
                      <% end %>
                    <% end %>
                  </div>
                    <div class="btn-group" role="group" aria-label="Task Actions">
                      <%# <%= link_to "Edit", edit_garden_plant_task_path(@garden_plant, task), class: "btn btn-primary" %>
                      <%# <%= link_to "Delete", garden_plant_task_path(@garden_plant, task), method: :delete, data: { confirm: "Are you sure you want to delete this task?" }, class: "btn btn-danger" %>
                    </div>
                  </div>
              <%#end %>
            <% end %>
          <% end %>
        </div>
      </div>
    <% end %>
</div>
