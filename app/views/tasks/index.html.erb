<div class="container">
<h1>My Tasks</h1>

  <div class="row">
    <div class="col-3 p-3">
      <% @tasks.each do |task| %>
        <div class="card mb-3 bg-light">
          <div class="card-body">
            <h5 class="card-title"><%= task.activity %></h5>
            <p class="card-text">Criticity: <%= task.criticity %></p>
            <p class="card-text">Due Date: <%= task.due_date %></p>
            <p class="card-text">Done Time: <%= task.done_time %></p>
            <div class="btn-group" role="group" aria-label="Task Actions">
              <%# <%= link_to "Edit", edit_garden_plant_task_path(@garden_plant, task), class: "btn btn-primary" %>
              <%# <%= link_to "Delete", garden_plant_task_path(@garden_plant, task), method: :delete, data: { confirm: "Are you sure you want to delete this task?" }, class: "btn btn-danger" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
