<div data-controller="garden-form">
  <%= simple_form_for @garden do |f| %>
    <div class="m-2">
      
      <%= f.input :name, 
                  label:false, 
                  wrapper_html: {
                    class: "card_plant_small",
                    data: {
                      garden_form_target: 'input'
                    }
                  }, 
                  input_html: {
                    placeholder: "Nom"
                  } %>

        <%= f.input :light, 
                    label:false, 
                    wrapper_html: { 
                      class: "d-none card_plant_small",
                      data: {
                        garden_form_target: 'input'
                      }
                    }, 
                    input_html: {
                      placeholder: "LuminositÃ©"
                    } %>
        
          <%# <%= f.input :size, 
                      label:false, 
                      wrapper_html: { 
                        class: "d-none card-dimension",
                        data: {
                          garden_form_target: 'input'
                        }
                      }, 
                      input_html: {
                        placeholder: "Dimension"
                      } %>
        
        <div class="d-none card_plant_small" data-garden-form-target='input' >
          <h3 style="text-align: center">Dimension</h3>
          <%= f.input :size,
                      label:false,
                      input_html: false%>
          <div class="dimension-info">
            <%= button_tag 'Petit', type: :submit, class: "button_next_step" %>
            <%= button_tag 'Moyen', type: :submit, class: "button_next_step" %>
            <%= button_tag 'Grand', type: :submit, class: "button_next_step" %>
          </div>
        </div>



        <%= f.input :care_willing, 
                    label:false, 
                    wrapper_html: { 
                      class: "d-none card_plant_small",
                      data: {
                        garden_form_target: 'input'
                      }
                    }, 
                    input_html: {
                      placeholder: "Soins"
                    } %>
        <%= f.input :location, 
                    label:false, 
                    input_html: {
                      data: {
                        address_autocomplete_target: "address"
                      }, 
                      class: "d-none card_plant_small"
                    },
                    wrapper_html: {
                      class: "d-none",
                      data: {
                        garden_form_target: 'input',
                        controller: "address-autocomplete", 
                        address_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"]
                      }
                    } %>
                        <span data-action="click->garden-form#goToNextQuestion" class="cursor-pointer">Suivant</span>
                    
      <div style= "text-align: center">
        <%= button_tag 'Suivant', type: :submit, class: "d-none button_next_step", data: { garden_form_target:'button'}%>
      </div>
    </div>
  <% end %>  
</div>  
